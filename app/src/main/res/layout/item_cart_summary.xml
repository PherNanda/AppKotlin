<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="wrap_content"
    android:forceDarkAllowed="false">

    <TextView
        android:id="@+id/delieveryDayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/delivery_same_day"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textStyle="bold"
        app:fontFamily="@font/bree_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/delieveryDayTextEco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/delivery_ecommerce"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textStyle="bold"
        app:fontFamily="@font/bree_regular"
        app:layout_constraintStart_toStartOf="@+id/delieveryDayText"
        app:layout_constraintTop_toTopOf="@+id/delieveryDayText" />


    <TextView
        android:id="@+id/deliveryPriceTextSd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/text_default_price"
        android:textAlignment="textEnd"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textStyle="bold"
        app:fontFamily="@font/bree_regular"
        app:layout_constraintBottom_toBottomOf="@+id/delieveryDayText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/delieveryDayText" />
    <TextView
        android:id="@+id/deliveryPriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="290dp"
        android:layout_marginBottom="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/text_default_delivery_price"
        android:textAlignment="textEnd"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textStyle="bold"
        app:fontFamily="@font/bree_regular"
        app:layout_constraintStart_toStartOf="@+id/delieveryDayTextEco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/deliveryPriceTextSd" />

    <TextView
        android:id="@+id/timeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingTop="30dp"
        android:layout_marginBottom="10dp"
        android:text="@string/choose_the_time_slot"
        android:textAppearance="?attr/textAppearanceBody1"
        app:fontFamily="@font/bree_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delieveryDayText" />
    <View
        android:id="@+id/view0"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deliveryPriceText" />




    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:orientation="vertical"
        android:paddingTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/time_selector"
            android:button="@android:color/transparent"
            android:visibility="gone"
            android:enabled="true"
            android:drawableEnd="@drawable/ic_tick"
            android:drawableTint="?attr/colorOnPrimary"
            android:paddingHorizontal="16dp"
            android:text="@string/receive_it_between_11_00_a_m_and_14_00_p_m"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@drawable/text_color_selector" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@drawable/time_selector"
            android:button="@android:color/transparent"
            android:drawableEnd="@drawable/ic_tick"
            android:visibility="gone"
            android:enabled="true"
            android:drawableTint="?attr/colorOnPrimary"
            android:paddingHorizontal="16dp"
            android:text="@string/receive_it_between_15_00_a_m_and_18_00_p_m"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@drawable/text_color_selector" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/time_selector"
            android:button="@android:color/transparent"
            android:drawableEnd="@drawable/ic_tick"
            android:visibility="gone"
            android:checked="true"
            android:enabled="true"
            android:drawableTint="?attr/colorOnPrimary"
            android:paddingHorizontal="16dp"
            android:text="@string/receive_it_between_20_00_a_m_and_22_00_p_m"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@drawable/text_color_selector" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/button1nextDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/time_selector"
            android:button="@android:color/transparent"
            android:layout_marginTop="5dp"
            android:enabled="true"
            android:visibility="gone"
            android:drawableEnd="@drawable/ic_tick"
            android:drawableTint="?attr/colorOnPrimary"
            android:paddingHorizontal="16dp"
            android:text="@string/receive_it_between_11_00_a_m_and_14_00_p_m_nextDay"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@drawable/text_color_selector" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/button2nextDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@drawable/time_selector"
            android:button="@android:color/transparent"
            android:drawableEnd="@drawable/ic_tick"
            android:enabled="true"
            android:visibility="gone"
            android:drawableTint="?attr/colorOnPrimary"
            android:paddingHorizontal="16dp"
            android:text="@string/receive_it_between_15_00_a_m_and_18_00_p_m_nextDay"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@drawable/text_color_selector" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/button3nextDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/time_selector"
            android:button="@android:color/transparent"
            android:drawableEnd="@drawable/ic_tick"
            android:enabled="true"
            android:visibility="gone"
            android:drawableTint="?attr/colorOnPrimary"
            android:paddingHorizontal="16dp"
            android:text="@string/receive_it_between_20_00_a_m_and_22_00_p_m_nextDay"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@drawable/text_color_selector" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?attr/colorSurface" />
    </RadioGroup>

