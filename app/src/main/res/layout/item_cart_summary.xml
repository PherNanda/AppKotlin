    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroup" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="20dp"
        android:paddingTop="20dp"
        android:background="?attr/colorSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_guest_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buyingGuestLabel" />

    <TextView
        android:id="@+id/buyingGuestLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="@string/you_are_buy_as_a_guest"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textStyle="bold"
        app:fontFamily="@font/bree_regular"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <TextView
        android:id="@+id/goToAccountLabel"
        android:layout_width="106dp"
        android:layout_height="22dp"
        android:layout_marginTop="4dp"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="8dp"
        android:text="@string/go_to_my_account"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?attr/colorPrimary"
        app:fontFamily="@font/bree_regular"
        app:layout_constraintStart_toStartOf="@+id/buyGuestPhone"
        app:layout_constraintTop_toBottomOf="@+id/buyGuestPhone"
        app:drawableEndCompat="@drawable/ic_next_arrow" />

    <EditText
        android:id="@+id/buyGuestEmail"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:background="?attr/selectableItemBackground"
        android:hint="@string/guest_email"
        android:textAlignment="textStart"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?attr/colorPrimary"
        app:fontFamily="@font/bree_regular"
        app:layout_constraintStart_toStartOf="@+id/buyingGuestLabel"
        app:layout_constraintTop_toBottomOf="@+id/buyingGuestLabel" />

    <EditText
        android:id="@+id/buyGuestPhone"
        android:layout_width="179dp"
        android:layout_height="21dp"
        android:layout_marginTop="4dp"
        android:background="?attr/selectableItemBackground"
        android:hint="@string/guest_phone"
        android:textAlignment="textStart"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?attr/colorPrimary"
        app:fontFamily="@font/bree_regular"
        app:layout_constraintStart_toStartOf="@+id/buyGuestEmail"
        app:layout_constraintTop_toBottomOf="@+id/buyGuestEmail" />


    <TextView
        android:id="@+id/shippingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/shipping_address"
        android:textAppearance="?attr/textAppearanceBody1"
        app:fontFamily="@font/bree_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/changeDirectionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="8dp"
        android:text="@string/change_direction"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="?attr/colorPrimary"
        app:fontFamily="@font/bree_regular"
        app:layout_constraintBottom_toBottomOf="@+id/shippingLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shippingLabel"
        app:drawableEndCompat="@drawable/ic_next_arrow" />



    <TextView
        android:id="@+id/addressText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ABC House, XYZ Road, HIJ Country"
        android:textAppearance="?attr/textAppearanceBody2"
        android:maxLines="2"
        android:minLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/shippingLabel"
        app:layout_constraintTop_toBottomOf="@+id/shippingLabel" />

    <TextView
        android:id="@+id/payLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/pay_with_card"
        android:textAppearance="?attr/textAppearanceBody1"
        app:fontFamily="@font/bree_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressText" />

    <!--<TextView
        android:id="@+id/usePaypalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackground"
        android:drawableEnd="@drawable/ic_next_arrow"
        android:drawablePadding="8dp"
        android:text="@string/use_paypal"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="?attr/colorPrimary"
        app:fontFamily="@font/bree_regular"
        app:layout_constraintBottom_toBottomOf="@+id/payLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/payLabel" />-->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cardNoLayout"
        style="@style/Widget.AppComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:errorEnabled="true"
        app:counterEnabled="true"
        app:counterMaxLength="16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/payLabel">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/cardNoEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/bree_bold"
            android:hint="@string/card_number"
            android:textColorHint="@color/app_black"
            android:inputType="number"
            android:paddingStart="8dp"
            android:paddingEnd="4dp"
            android:maxLength="16"
            app:fontFamily="@font/bree_regular" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ownerNameLayout"
        style="@style/Widget.AppComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="2dp"
        app:errorEnabled="true"
        app:counterEnabled="true"
        app:counterMaxLength="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardNoLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ownerNameEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/bree_bold"
            android:hint="@string/owner_name"
            android:textColorHint="@color/app_black"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            android:paddingEnd="4dp"
            android:maxLength="50"
            app:fontFamily="@font/bree_regular" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dateLayout"
        style="@style/Widget.AppComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="2dp"
        app:errorEnabled="true"
        app:counterEnabled="true"
        app:counterMaxLength="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ownerNameLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dateEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/bree_bold"
            android:hint="@string/mm_aa"
            android:textColorHint="@color/app_black"
            android:inputType="text"
            android:paddingStart="8dp"
            android:paddingEnd="4dp"
            android:maxLength="5"
            app:fontFamily="@font/bree_regular" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/securityLayout"
        style="@style/Widget.AppComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="2dp"
        app:errorEnabled="true"
        app:counterEnabled="true"
        app:counterMaxLength="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/securityEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/bree_bold"
            android:hint="@string/security_code"
            android:textColorHint="@color/app_black"
            android:inputType="number"
            android:paddingStart="8dp"
            android:paddingEnd="4dp"
            android:maxLength="3"
            app:fontFamily="@font/bree_regular" />

      </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>