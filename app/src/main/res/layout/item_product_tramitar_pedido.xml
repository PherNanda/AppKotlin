            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProductImageItem"
                style="@style/Theme.AppComponents.Card.Product.List"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:backgroundTint="@color/white_900"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="1dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/grey_light_border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/productBrandNames"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="89dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/productImage">
                    <TextView
                        android:id="@+id/qtyProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:maxLines="1"
                        android:minLines="1"
                        android:elevation="3dp"
                        android:textAlignment="center"
                        android:ellipsize="end"
                        app:fontFamily="@font/bree"
                        android:textSize="10sp"
                        android:background="@drawable/background_tramitar_pedido_text"
                        android:text="1"
                        android:textAppearance="?attr/textAppearanceBody2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/productImage"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>


                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"
                    android:background="@color/transparent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />




            </com.google.android.material.card.MaterialCardView>



   <!-- </com.google.android.material.card.MaterialCardView>-->

</androidx.constraintlayout.widget.ConstraintLayout>