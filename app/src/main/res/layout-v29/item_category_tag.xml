<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="9dp"
    xmlns:tools="http://schemas.android.com/tools">

    <CheckBox
        android:id="@+id/checkBox"
        android:background="@drawable/category_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:checked="false"
        android:paddingHorizontal="24dp"
        android:button="@drawable/category_toggle_button"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textAlignment="center"
        android:textColor="@drawable/category_text_color_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Todo s lsfs dff"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/checkBoxCard"
        android:background="@drawable/category_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:checked="false"
        app:cardElevation="5dp"
        app:cardCornerRadius="30dp"
        android:paddingHorizontal="24dp"
        android:button="@drawable/category_toggle_button"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textAlignment="center"
        android:textColor="@drawable/category_text_color_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Todo categorias dff">
        <TextView
            android:id="@+id/categoryName"
            android:textColor="@color/new_app_grey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>